{
    "version": "2.2.2",
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "alwaysStrict": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true
    },
    "filesGlob": [
        "./app/**/*.ts"
    ],
    "compileOnSave": false
}
